@model SportCourtManagement.Models.TBooking

<div class="booking-summary">
    <h4 class="summary-title">📋 Thông tin đặt sân</h4>

    <div class="summary-section">
        <p><strong>Mã đặt:</strong> @Model.BookingId</p>
        <p><strong>Ngày đặt:</strong> @Model.BookingDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Tài khoản:</strong> @Model.AccountId</p>
        <p><strong>Trạng thái:</strong> @Model.Status?.StatusName</p>
        <p><strong>Giảm giá:</strong> @(Model.Sale.HasValue ? $"{Model.Sale}%" : "Không có")</p>
        <p><strong>Tổng tiền:</strong> @Model.Price.ToString("N0") đ</p>
    </div>

    <hr />

    <h5 class="summary-subtitle">🕓 Chi tiết khung giờ</h5>
    <table class="summary-table">
        <thead>
            <tr>
                <th>Sân</th>
                <th>Khung giờ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.TBookingDetails)
            {
                <tr>
                    <td>@detail.Court?.CourtName</td>
                    <td>@detail.StartTime - @detail.EndTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
