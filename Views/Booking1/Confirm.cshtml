@model SportCourtManagement.Models.TBooking
@{
    ViewData["Title"] = "Xác nhận đặt sân";
}

<link rel="stylesheet" href="~/css/Booking/Booking.css" />

<div class="container mt-4" style="max-width:900px;">
    <h2 class="text-center text-warning mb-4">🔒 XÁC NHẬN THÔNG TIN</h2>

    <!-- Hiển thị thông tin đặt -->
    <partial name="_BookingSummary" model="Model" />

    <div class="text-center mt-4">
        <form asp-action="Success" method="post">
            <input type="hidden" name="BookingId" value="@Model.BookingId" />
            <button type="submit" class="btn btn-success px-4 py-2">XÁC NHẬN & THANH TOÁN</button>
        </form>
    </div>
</div>
