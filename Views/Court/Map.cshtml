@model IEnumerable<SportCourtManagement.Models.TCourt>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Map";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Court/Map.css" asp-append-version="true" />
}
<div class="relative h-screen w-full overflow-hidden">
    <!-- Bản đồ (nằm dưới) -->
    <div id="map"></div>


    <!-- Navbar nổi trên bản đồ -->
    <nav class="absolute top-0 left-0 w-full z-10" id="navbar">
        <div class="bg-transparent rounded-xl flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
            <!-- Ô tìm kiếm -->
            <div class="flex items-center justify-center ps-4 pe-1 py-3 md:w-1/3 w-full z-10" id="searchbox">
                <div class="flex items-center bg-gray-100 rounded-full px-3 py-2 w-full max-w-xl border-2">
                    <i class="fa-solid fa-magnifying-glass text-gray-500 mr-2"></i>
                    <input type="text" id="searchInput"
                           placeholder="Tìm kiếm sân quanh đây..."
                           class="bg-transparent outline-none w-full text-gray-700" />
                </div>
            </div>
            
            <!-- Slider nút -->
            <div class="slider flex gap-2 overflow-x-auto whitespace-nowrap py-1 px-4 md:w-2/3">
                @await Component.InvokeAsync("CourtTypes")
            </div>
        </div>
    </nav>

    

    <!-- Nút chức năng góc phải dưới -->  
    <div class="absolute btn-group corner-btn" id="corner_btn" role="group">
        <button type="button" class="btn-circle" id="menu-btn">
            <i class="fa-solid fa-list"></i>
        </button>
        <button type="button" class="btn-circle" id="locate-btn">
            <i class="fa-solid fa-location-crosshairs"></i>
        </button>
    </div>

    <div class="sidebar z-9" id="sidebar">
        <ul id="courtList">
			@await Component.InvokeAsync("CourtList")
        </ul>
    </div>

    <!-- JS: Kéo slider bằng chuột -->
@section Scripts{
    <script src="~/js/Court/Map.js"></script>
}
</div>
