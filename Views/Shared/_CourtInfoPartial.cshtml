@model SportCourtManagement.Models.TCourt

@if (Model != null)
{
    <img src="~/images/@(Model.Img ?? "caulong.jpg")" alt="Avatar sân" class="img-fluid rounded mb-3" style="width: 100%; max-height: 300px; object-fit: contain;">
    <h6>@Model.CourtName</h6>
    <p><i class="fas fa-map-marker-alt text-success me-2"></i><strong>@Model.CourtAddress</strong></p>
    <p><i class="far fa-clock text-success me-2"></i><strong>@Model.OpenTime?.ToString(@"HH\:mm") - @Model.CloseTime?.ToString(@"HH\:mm")</strong></p>
    <p><i class="fas fa-phone text-success me-2"></i><strong>@Model.Contact</strong></p>
    <p><i class="fas fa-star text-warning me-2"></i><strong>@Model.Rating?.ToString("0.0") / 5.0</strong></p>

}
else
{
    <p class="text-danger">Không tìm thấy thông tin sân.</p>
} 