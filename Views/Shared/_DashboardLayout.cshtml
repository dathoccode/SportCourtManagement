
@{
    // Layout này sẽ được lồng bên trong _Layout.cshtml chính
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login/dashboard.css" asp-append-version="true" />
}

<div class="container py-5">
    <div class="row">

        <div class="col-lg-4 mb-4 mb-lg-0 dashboard-sidebar">
            <a asp-action="Profile" asp-controller="Account" class="user-info text-decoration-none">
                <img src="@(ViewBag.UserAvatar ?? Url.Content("~/images/userAvatar.jpg"))" alt="Avatar" />
                <h5>@(ViewBag.UserName ?? "Người dùng")</h5>
                <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
            </a>

                <div class="text-muted small mb-2">Hạng thành viên</div>
                <div class="quick-actions">
                    <a asp-action="MyBookings" asp-controller="Account" class="action-btn">
                        <i class="fas fa-calendar-check"></i>
                        <span>Lịch đã đặt</span>
                    </a>
                <a href="#" class="action-btn" data-bs-toggle="modal" data-bs-target="#comingSoonModal">
                        <i class="fas fa-bell"></i>
                        <span>Thông báo</span>
                    </a>
                <a href="#" class="action-btn" data-bs-toggle="modal" data-bs-target="#comingSoonModal">
                        <i class="fas fa-wallet"></i>
                        <span>Thanh toán</span>
                    </a>
                <a href="#" class="action-btn" data-bs-toggle="modal" data-bs-target="#comingSoonModal">
                        <i class="fas fa-tags"></i>
                        <span>Ưu đãi</span>
                    </a>
                </div>

                <div class="list-group dashboard-menu">
                    <small class="text-muted text-uppercase ps-1 my-2">Hoạt động</small>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-heart menu-icon"></i>
                        <span>Sân yêu thích</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-users menu-icon"></i>
                        <span>Nhóm của tôi</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>

                    <small class="text-muted text-uppercase ps-1 my-2 pt-2">Hệ thống</small>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-cog menu-icon"></i>
                        <span>Cài đặt</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-question-circle menu-icon"></i>
                        <span>Trung tâm trợ giúp</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-shield-alt menu-icon"></i>
                        <span>Điều khoản và chính sách</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action">
                        <i class="fas fa-sign-out-alt menu-icon"></i>
                        <span>Đăng xuất</span>
                        <i class="fas fa-chevron-right ms-auto text-muted small arrow-icon"></i>
                    </a>
                </div>

        </div>

        <div class="col-lg-8">
            @RenderBody()
        </div>
        <div class="modal fade" id="comingSoonModal" tabindex="-1" aria-labelledby="comingSoonModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header modal-header-custom">
                        <h5 class="modal-title" id="comingSoonModalLabel">Thông báo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Tính năng này đang được phát triển. Vui lòng quay lại sau!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary-custom" data-bs-dismiss="modal">Đã hiểu</button>
                    </div>
                </div>
            </div>
        </div>
        @section Scripts {
            @await RenderSectionAsync("Scripts", required: false)
        }
    </div>
</div>