@model SportCourtManagement.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AccountLayout";
}

<div class="login-card" role="main">
    <h2>Đăng Nhập</h2>

    <form asp-action="Login" method="post" class="w-100 d-flex flex-column align-items-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="input-box">
            <input asp-for="Email" placeholder="Email hoặc số điện thoại của bạn?" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="input-box">
            <input asp-for="Password" placeholder="Mật khẩu (*)" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-login">Đăng Nhập</button>
    </form>

    <div class="links-row">
        <a asp-action="Register">Bạn chưa có tài khoản? <b>Đăng ký</b></a>
        <a asp-action="ForgotPassword">Quên mật khẩu?</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
