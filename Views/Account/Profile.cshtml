@model SportCourtManagement.Models.TAccount
@{
    Layout = "_Layout";
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login/profile.css" asp-append-version="true" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 profile-column">

            <div class="profile-banner rounded-top"></div>

            <div class="profile-avatar-container">
                <label for="AvatarFileInput"
                       style="cursor: pointer; position: relative; display: inline-block;"
                       title="Nhấn để đổi ảnh đại diện">

                    <img src="@(Model.AccImg != null ? "data:image/jpeg;base64," + Convert.ToBase64String(Model.AccImg) : Url.Content("~/images/userAvatar.jpg"))"
                         alt="Ảnh đại diện" class="rounded-circle profile-avatar" id="ProfileAvatarImage" />

                    <span class="avatar-camera-icon">
                        <i class="fas fa-camera"></i>
                    </span>
                </label>

                <input name="AvatarFile" type="file" id="AvatarFileInput" style="display: none;" accept="image/*" />
            </div>

            <form asp-controller="Account" asp-action="Profile" method="post" class="shadow rounded-bottom p-4 p-md-5 profile-card" enctype="multipart/form-data">

                @Html.AntiForgeryToken()<div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3 align-items-center">
                    <label asp-for="Email" class="col-md-3 col-form-label form-horizontal-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label asp-for="Phone" class="col-md-3 col-form-label form-horizontal-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label asp-for="AccName" class="col-md-3 col-form-label form-horizontal-label"></label>
                    <div class="col-md-9">
                        <input asp-for="AccName" class="form-control" />
                        <span asp-validation-for="AccName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label asp-for="Gender" class="col-md-3 col-form-label form-horizontal-label"></label>
                    <div class="col-md-9">
                        <select asp-for="Gender" class="form-select">
                            <option value="">Chọn giới tính</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label asp-for="DateOfBirth" class="col-md-3 col-form-label form-horizontal-label"></label>
                    <div class="col-md-9">
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/login/profile.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}